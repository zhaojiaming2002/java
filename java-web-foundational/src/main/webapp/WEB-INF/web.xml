<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    基于xml的方式配置servlet
        1.配置servlet
        2.配置servlet-mapping
    -->
    <servlet>

        <!--    servlet-name的名字一般都是Servlet类名首字母小写 -->
        <servlet-name>helloWorldServlet</servlet-name>
        <!-- 全限定名 -->
        <servlet-class>net.microsoft.java.web.servlet.HelloWorldServlet</servlet-class>
        <!--注意写的顺序-->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>applicaiton.xml</param-value>
        </init-param>
        <!--        <servlet-name>welcomeServlet</servlet-name>-->

        <load-on-startup>1</load-on-startup>


    </servlet>
    <servlet-mapping>

        <servlet-name>helloWorldServlet</servlet-name>
        <!--        配置客户端访问映射路径，目前必须/开头-->
        <url-pattern>/hello</url-pattern>

    </servlet-mapping>
    <!--    <servlet-mapping>-->
    <!--        <servlet-name>welcomeServlet</servlet-name>-->
    <!--        <url-pattern>/welcome</url-pattern>-->
    <!--    </servlet-mapping>-->


    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>com.wf.captcha.servlet.CaptchaServlet</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>

<!--

 filter-mapper先通过url-pattern匹配到然后再通过filter-name找到filter的filter-name.在调用filter-class
 -->



    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>net.microsoft.java.web.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

</web-app>
